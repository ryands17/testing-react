{
  "name": "testing-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.19",
    "@types/node": "12.11.2",
    "@types/react": "16.9.9",
    "@types/react-dom": "17.0.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.0.1",
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "@react-mock/fetch": "^0.3.0",
    "@types/node-fetch": "^2.3.7",
    "@types/prettier": "^1.18.2",
    "cross-env": "^6.0.3",
    "husky": "^3.0.4",
    "lint-staged": "^9.4.2",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "typesync": "^0.6.1"
  },
  "scripts": {
    "sync:types": "typesync",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:once": "cross-env CI=true npm run test",
    "prettify": "prettier --write src/**/*.{ts,tsx,json,css,scss,md}",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:once && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
